@inject IHttpContextAccessor HttpContextAccessor
@{
    var nonce = HttpContextAccessor.HttpContext?.Items["CSPNonce"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Základní metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="language" content="cs">

    <!-- SEO metadata -->
    <meta name="description" content="Jsem David Trmota a nabízím sádrokartonářské práce v Plzeňském kraji. Zabývám se montáží příček a podhledů, půdními vestavbami a rekonstrukcemi interiérů.">
    <meta name="keywords" content="sádrokartonář Klatovy, sádrokartonář Plzeňský kraj, montáž sádrokartonu, sádrokartonové příčky, sádrokartonové podhledy, sádrokartonové konstrukce, rekonstrukce interiérů, sádrokartonářské práce">
    <meta name="robots" content="index, follow">

    <link rel="canonical" href="https://sadrokartonytrmota.cz">
    <base href="/" />

    <!-- Styly -->
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="SadrokartonyTrmota.styles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">



    <!-- Content Security Policy -->
    <meta http-equiv="Content-Security-Policy" content="
    default-src 'self';
    script-src 'self' 'nonce-@(nonce)';
    style-src 'self' https://cdn.jsdelivr.net 'unsafe-inline';
    img-src 'self' data: https://www.firmy.cz https://toplist.cz;
    connect-src 'self';
    font-src 'self' https://cdn.jsdelivr.net;
    frame-src 'self' https://maps.google.com https://www.google.com;
    object-src 'none';
    base-uri 'self';">


    <HeadOutlet />

    <!-- Open Graph Metadata -->
    <meta property="og:title" content="David Trmota - Sádrokartonář Plzeňský kraj" />
    <meta property="og:description" content="Nabízím profesionální sádrokartonářské práce. Specializuji se na příčky, podhledy, půdní vestavby a rekonstrukce interiérů." />
    <meta property="og:image" content="/images/brand/logoST" />
    <meta property="og:url" content="https://sadrokartonytrmota.cz" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards Metadata -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="David Trmota - Sádrokartonář Plzeňský kraj" />
    <meta name="twitter:description" content="Nabízím profesionální sádrokartonářské práce. Specializuji se na příčky, podhledy, půdní vestavby a rekonstrukce interiérů." />
    <meta name="twitter:image" content="/images/brand/logoST" />

    <HeadContent>
        <script type="application/ld+json">
            {
              "@@context": "https://schema.org",
              "@@type": "LocalBusiness",
              "name": "David Trmota - Sádrokartonář",
              "image": "https://www.sadrokartonytrmota.cz/images/sadrokartony/sadrokarton_15.webp",
              "logo": "https://www.sadrokartonytrmota.cz/images/brand/logoST.png",
              "description": "Profesionální sádrokartonářské práce v Plzeňském kraji. Montáže příček, podhledů a rekonstrukce interiérů.",
              "url": "https://www.sadrokartonytrmota.cz",
              "address": {
                "@@type": "PostalAddress",
                "addressLocality": "Zborovy",
                "addressRegion": "Plzeňský kraj",
                "postalCode": "33901",
                "addressCountry": "CZ"
              },
              "telephone": "+420723124625",
              "areaServed": "Plzeňský kraj",
              "geo": {
                "@@type": "GeoCoordinates",
                "latitude": 49.380517,
                "longitude": 13.517395
              }
            }
        </script>

    </HeadContent>
</head>

<body class="bg-body-secondary bg-opacity-75">
    <Routes />
    <script nonce="@nonce" src="_framework/blazor.web.js" defer></script>
    <script nonce="@nonce" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>

</body>

</html>
