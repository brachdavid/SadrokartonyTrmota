<section id="faq" class="px-lg-5 py-4">
    <div class="container">
        <h2 class="h1 text-center mb-4">Často kladené dotazy</h2>
        <div class="accordion" id="faqAccordion">
            @foreach (var (question, answer) in FAQs)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="@($"heading{question.GetHashCode()}")">
                        <button class="accordion-button collapsed z-1" type="button" data-bs-toggle="collapse"
                                data-bs-target="@($"#collapse{question.GetHashCode()}")"
                                aria-expanded="false"
                                aria-controls="@($"collapse{question.GetHashCode()}")">
                            @question
                        </button>
                    </h2>
                    <div id="@($"collapse{question.GetHashCode()}")" class="accordion-collapse collapse z-1"
                         aria-labelledby="@($"heading{question.GetHashCode()}")"
                         data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            @answer
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<style>
    /* Výchozí barva zavřené položky (bílá) */
    .accordion-button {
        background-color: white !important;
        color: black !important;
        border: none; /* Odstranění rámečku */
    }

        /* Barva otevřené položky (žlutá) */
        .accordion-button:not(.collapsed) {
            background-color: #f9d697 !important; /* Žlutá */
            color: black !important; /* Černý text */
            box-shadow: none !important; /* Odstranění modrého obrysu */
        }

    /* Barva těla otevřené položky */
    .accordion-body {
        background-color: #fffdf5; /* Světle žlutá */
        color: black; /* Černý text */
    }

    /* Odstranění focus outline (modrého obrysu) */
    .accordion-button:focus {
        box-shadow: none !important;
        outline: none !important;
    }
</style>

